@model SimpleBlog.FrontEnd.ViewModels.PostDetailsViewModel
@{
    ViewData["Title"] = $"{Model.Post.Title} - Simple Blog";
}
@if (Model.Post != null)
{
    <ul class="breadcrumb">
        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a href="@Url.Action("Index", "Posts")">Posts</a></li>
        <li style="color:green">Post @Model.Post.Id</li>
    </ul>

    <h1>@Model.Post.Title</h1>

    <div class="row mb-1">
        <div class="col-md-12">
            <h2><img src="https://via.placeholder.com/1920x600/@Model.Post.Colour/ffffff?text=@Model.Post.Title" alt="@Model.Post.Title" class="img-responsive" /></h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Model.Post.Body
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Model.Post.Body
        </div>
    </div>

    <h2>What people say</h2>
    foreach (var comment in Model.Comments)
    {
        <div class="row">
            <div class="col-md-1">
                <a href="mailto:@comment.Email?subject=Regarding your comment on '@Model.Post.Title' ">
                    <img src="@comment.Avatar" alt="@comment.Name" class="img-responsive" />
                </a>
            </div>
            <div class="col-md-5">
                <a href="mailto:@comment.Email?subject=Regarding your comment on '@Model.Post.Title' ">
                    <h3>@comment.Name</h3>
                </a>
                <p>@comment.Body</p>
            </div>
        </div>
    }
}
else
{
    <p>Post not found. Sorry.</p>
}